# Dockerfile for AIDK(Legacy) integration test environment

FROM xuechendi/oneapi-aikit:legacy_hydro.ai

ENV http_proxy "http://proxy-prc.intel.com:912"
ENV https_proxy "http://proxy-prc.intel.com:912"

RUN apt-get update -y && apt-get -y install libunwind-dev
RUN git clone https://github.com/mlperf/logging.git /home/vmagent/app/mlperf-logging
RUN yes | /opt/intel/oneapi/intelpython/latest/envs/pytorch_mlperf/bin/pip install -e /home/vmagent/app/mlperf-logging